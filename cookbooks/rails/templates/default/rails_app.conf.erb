server {
	server_name <%= @params[:server_name] %>;
	access_log <%= @node[:nginx][:log_dir] %>/<%= @params[:name] %>.access.log main;
	listen 80;
	
  location {
    root <%= @params[:docroot] %>;
    passenger_enabled on;
    
    if (-f $document_root/system/maintenance.html) {
      rewrite ^(.*)$ /system/maintenance.html break;
    }
  }
}
